<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginActivity">

<RelativeLayout
    android:id="@+id/relativelayout_shape_login"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/shape"
    android:layout_marginTop="75dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/email_txtview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_id"
        android:textSize="20sp"
        android:textColor="#2F0B5F"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/email_editxt1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape2"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/email_txtview1"
        android:layout_below="@+id/email_txtview1"/>

    <TextView
        android:id="@+id/passwrd_txtview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textSize="20sp"
        android:textColor="#2F0B5F"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_editxt1"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/email_editxt1"/>


    <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/psswrd_editxt1_txtinputLayout"
      android:layout_marginRight="12dp"
      android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
      app:passwordToggleDrawable="@drawable/icon_selector"
      app:passwordToggleEnabled="true"
        android:background="@drawable/shape2"
      app:layout_constraintTop_toBottomOf="@+id/passwrd_txtview1"
      android:layout_below="@+id/passwrd_txtview1"
      app:passwordToggleTint="#2F0B5F">

      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:id="@+id/psswrd_editxt1"
          android:inputType="textPassword"
          />

  </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/forgetpasswrd_txtview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forget_password"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:textColor="#0000FF"
        app:layout_constraintTop_toBottomOf="@+id/psswrd_editxt1_txtinputLayout"
        android:layout_below="@+id/psswrd_editxt1_txtinputLayout"/>


</RelativeLayout>


    <Button
        android:id="@+id/login_nxt_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:text="@string/next_button"
        android:textColor="@color/main_colour"
        android:background="#f4C2C2"
        android:textSize="20sp"
        android:textStyle="italic|bold"
        app:layout_constraintTop_toBottomOf="@+id/relativelayout_shape_login"

        />










</androidx.constraintlayout.widget.ConstraintLayout>