<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ForgetPassword">

<RelativeLayout
    android:id="@+id/frgtpsswrd_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="100dp"
    android:background="@drawable/shape"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp"
    >

    <TextView
        android:id="@+id/email_txtview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_id"
        android:textSize="20sp"
        android:textColor="@color/main_colour"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/email_editxt3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape2"
        app:layout_constraintTop_toBottomOf="@+id/email_txtview3"
        android:layout_below="@+id/email_txtview3"
        />

</RelativeLayout>

    <Button
        android:id="@+id/donebtn_frgtpsswrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/frgtpsswrd_relativelayout"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="45dp"
        android:layout_marginTop="35dp"
        android:text="Done"
        android:textSize="18dp"
        android:textColor="#2F0B5F"
        android:background="@color/colorPrimary"/>



</androidx.constraintlayout.widget.ConstraintLayout>